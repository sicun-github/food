.u-page {
  padding: 0 30rpx;
}
.u-page .u-demo-block {
  margin-top: 20rpx;
  border-bottom: 2rpx solid #eee;
}
.u-page .u-demo-block__content {
  margin-bottom: 10rpx;
}
.u-page .u-demo-block__content .wechat-container {
  width: 100%;
  margin: 20rpx 0 10rpx 0;
  display: flex;
  height: 60rpx;
  justify-content: space-between;
}
.u-page .u-demo-block__content .wechat-container .right {
  display: flex;
  align-items: center;
}
.u-page .u-demo-block__content .wechat-container .right .dz-button {
  padding: 5rpx 5rpx;
  box-sizing: border-box;
  height: 50rpx;
  display: flex;
  background-color: rgba(193, 193, 193, 0.5);
  border-radius: 8rpx;
}
.u-page .u-demo-block__content .dz-container {
  background-color: rgba(193, 193, 193, 0.5);
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  width: 550rpx;
}
.u-page .u-demo-block__content .dz-container .comment {
  width: 100%;
  padding: 10rpx 10rpx;
}
.u-page .u-demo-block__content .dz-container .comment .person {
  display: flex;
  align-items: flex-start;
  margin-bottom: 10rpx;
}
.u-page .u-demo-block__content .dz-container .comment .person .name {
  font-size: 26rpx;
  font-weight: bold;
  margin-right: 10rpx;
}
.u-page .u-demo-block__content .dz-container .comment .person .content {
  flex: 1;
  font-size: 24rpx;
  color: #000;
}
.album {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}
.album__avatar {
  background-color: #f3f4f6;
  padding: 5px;
  border-radius: 3px;
}
.album__content {
  margin-left: 10px;
  flex: 1;
}
.album__content .title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.album__content .title .info {
  font-size: 22rpx;
  color: #f1a532;
  background-color: #fdf6ec;
  padding: 5rpx;
  box-sizing: border-box;
  border: 1rpx solid #f9ae3d;
  border-radius: 5rpx;
}

